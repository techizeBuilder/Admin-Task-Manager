# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Base URL for email links (production URL)
LOCAL_BASE_URL=http://localhost:5000
PRODUCTION_BASE_URL=https://your-app.onrender.com

# Database
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/TaskSetu

# Email Service (Gmail SMTP)
MAILTRAP_HOST=smtp.gmail.com
MAILTRAP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# SendGrid API Key (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Google OAuth (for server-side)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/google-calendar-callback